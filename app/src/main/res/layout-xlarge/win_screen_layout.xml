<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/levelback"
    android:paddingBottom="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginStart="30dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:layout_gravity="bottom">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|end"
                android:background="@color/transparent"
                android:src="@drawable/ic_trophy_award_black_48dp"
                app:tint="@color/yellow" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="@color/middleblue"
                android:layout_gravity="bottom"
                android:foregroundGravity="bottom"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/win_middle_linear"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="@color/transparent"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="5">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="27dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/win_text"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="?attr/winScreenFontColor" />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_trophy_black_48dp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:text="@string/win_time"
                    android:textColor="?attr/winScreenFontColor" />

                <TextView
                    android:id="@+id/win_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textSize="20sp"
                    android:textColor="?attr/winScreenFontColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:text="@string/win_hint"
                    android:textColor="?attr/winScreenFontColor" />

                <TextView
                    android:id="@+id/win_hints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textSize="20sp"
                    android:textColor="?attr/winScreenFontColor" />

                <TextView
                    android:id="@+id/win_new_besttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/win_best_time"
                    android:textSize="20sp"
                    android:textColor="?attr/winScreenFontColor"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom"
                    android:background="@color/middleblue"
                    android:foregroundGravity="bottom" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_gravity="bottom">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_trophy_award_black_48dp"
                android:background="@color/transparent"
                app:tint="@color/yellow" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="@color/middleblue"
                android:layout_gravity="bottom"
                android:foregroundGravity="bottom"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="5dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="20dp"
        android:weightSum="2">
        <Button
            android:id="@+id/win_continue_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/standalone_button"
            android:textColor="@color/yellow"
            android:layout_weight="1"
            android:text="@string/win_button_text"
            android:textAllCaps="false"
            android:layout_marginRight="5dp"/>
        <Button
            android:id="@+id/win_showGame_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/standalone_button"
            android:textColor="@color/yellow"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="@string/win_show_game"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

</LinearLayout>